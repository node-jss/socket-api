        <div class="clearfix"></div>
         <div class="content">
            <div class="clearfix"></div>
            <h4 class="text-left">Pending Orders </h4>
            <table style="margin-top:15px;" class="table_balance table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0" >
               <thead>
                  <tr> 
                     <th>Date</th>
                     <th>Total amount</th>
                     <th>Equivalent</th>
                     
                     <th>Status</th>
                     <th>Action</th>
                  </tr>
               </thead>
               <tbody>
                  {{#each order_history}} 
                    {{#if_eq this.status '0'}}
                      <tr>
                        <td>{{prettifyDate this.date}}</td>
                        <td>{{satoshi this.amount_coin}} BBL</td>
                        <td>{{satoshi this.amount_payment}} {{ this.method_payment}}</td>
                        <td class="text-left"><span style="text-transform: capitalize; font-size: 12px; font-weight: 400; border-radius: 5px;" class="label label-default">Waiting</span></td>
                        <td>
                          {{#if_eq this.status '0'}}
                            <button class="remove_order_ico" data-id="{{this._id}}"> <i class="fa fa-times "></i> </button>
                          {{/if_eq}}
                        </td>
                      </tr>
                    {{/if_eq}}
                   {{/each}} 
               </tbody>
            </table>
            

            <div class="clearfix"></div>
            <h4 class="text-left">Completed Orders</h4>
            <table style="margin-top:15px;" class="table_balance table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0" >
               <thead>
                  <tr> 
                     <th>Date</th>
                     <th>Total amount</th>
                     <th>Equivalent</th>
                     <th>Status</th>
                  </tr>
               </thead>
               <tbody>
                  {{#each order_history}} 
                    {{#if_eq this.status '1'}}
                     <tr>
                        <td>{{prettifyDate this.date}}</td>
                        <td>{{satoshi this.amount_coin}} BBL</td>
                        <td>{{satoshi this.amount_payment}} {{ this.method_payment}}</td>
                        <td  class="text-left"><span style="text-transform: capitalize; font-size: 12px; font-weight: 400; border-radius: 5px;" class="label label-success">Matching</span></td>
                      </tr>
                    {{/if_eq}}
                   {{/each}} 
               </tbody>
            </table>



            <div class="clearfix"></div>
