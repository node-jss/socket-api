<div id="Login-page">
   <div class="main">
      <div class="container">

         <div class="row row-content">
            <div class="col-md-6 col-md-push-3">
            <div class="col-md-12 text-center" style="margin-top: 20px;margin-bottom: 20px">
               <img class="site_logo" alt="Logo" width="300" style="" src="/img/logo.png" />
            </div>
               <div class="clearfix" ></div>
              
               <div class="col-md-12 login-page-right ">
                  <img src="/img/loading.gif"/> 
                  <div class="bg-while">
                     <div class="row" >
                        <h3 class="title-login">Forgot Password</h3>
                        <form id="frmForgot" method="post" novalidate class="m-t-15">
                           <div class="card-layer"></div>
                           <div class="content m-t-15">
                              <div class="text-success" id="success" style="display: none;">Please check your mail!</div>
