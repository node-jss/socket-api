<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content">
                  <div class="material-datatables">
                     <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                        <thead>
                           <tr>
                              <th>Username</th>
                              <th>Date</th>
                              <th>SFC Amount</th>
                              <th>Payment Amount</th>
                              <th>Status</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{#each ico}} 
                           <tr>
                              <td>{{this.username}}</td>
                              <td>{{formatDate this.date "MM/DD/YYYY LT"}} </td>
                              <td >{{satoshi this.amount_coin}}</td>
                              <td>{{satoshi this.amount_payment}} {{this.method_payment}}</td>
                              <td>

                                 {{#if_eq this.status '3'}}
                                    <span style="text-transform: capitalize; font-size: 12px; font-weight: 400; border-radius: 5px;" class="label label-danger">Cancel</span>
                                 {{/if_eq}} 
                                 {{#if_eq this.status '0'}}
                                    <span style="text-transform: capitalize; font-size: 12px; font-weight: 400; border-radius: 5px;" class="label label-default">Wating</span>
                                 {{/if_eq}} 
                                 {{#if_eq this.status '1'}}
                                    <span style="text-transform: capitalize; font-size: 12px; font-weight: 400; border-radius: 5px;" class="label label-success">Matching</span>
                                 {{/if_eq}} 
                              </td>
                           </tr>
                           {{/each}} 
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>