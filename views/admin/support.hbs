<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content">
                  
                  <div class="material-datatables">
                     <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                        <thead>
                           <tr >
                              <th style="text-transform: capitalize;">Date</th>
                              <th style="text-transform: capitalize;">Username</th>
                              <th style="text-transform: capitalize;">Subject</th>
                              <th style="text-transform: capitalize; text-align: center;">Status</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{#each history}} 
                           <tr>
                              <td>{{formatDate this.date "MM/DD/YYYY LT"}} </td>
                              <td>{{this.username}}</td>
                              <td>
                                 <a href="/qweqwe/admin/support/ticket/{{this.token}}">
                                 {{this.subject}}
                                 </a>
                              </td>
                              
                              <td>
                              	{{#if_eq this.status '1'}} 
                                 <span class="label label-success"> Answered</span>
                                 {{/if_eq}}

                                 {{#if_eq this.status '0'}} 
                                    <span class="label label-default">Not answered</span>
                                 {{/if_eq}}  
                              </td>
                           </tr>
                           {{/each}} 
                        </tbody>
                     </table>

                     
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>