<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="content">
                  <form action="/qweqwe/admin/ico/totalbuy"  method="POST">
                     <label>Total Buy</label><br>
                     <input  type="text" name="total" value="{{total_ico.total}}" />
                     <input type="submit" name="OK" />
                  </form>


                  {{#if_eq total_ico.status '1'}}
                   <div class="col-md-12 text-center">
                     <a href="/qweqwe/admin/ico/endico">
                        <button class="btn btn-success">End Buy ICO</button>
                     </a>
                  </div>
                  {{/if_eq}} 
                  {{#if_eq total_ico.status '0'}}
                   <div class="col-md-12 text-center">
                     <a href="/qweqwe/admin/ico/startico">
                        <button class="btn btn-warning">Start Buy ICO</button>
                     </a>
                  </div>
                  {{/if_eq}} 
                  <div class="material-datatables">
                     <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                        <thead>
                           <tr >
                              <th style="text-transform: capitalize;">Date</th>
                              <th style="text-transform: capitalize;">Username</th>
                              <th style="text-transform: capitalize;">Sponser</th>
                              <th style="text-transform: capitalize;">BBL Amount</th>
                              <th style="text-transform: capitalize;">Payment Amount</th>
                              <th style="text-transform: capitalize; text-align: center;">Action</th>
                           </tr>
                        </thead>
                        <tbody>
                           {{#each ico}} 
                           <tr>
                              <td>{{formatDate this.date "MM/DD/YYYY LT"}} </td>
                              <td>{{this.username}}</td>
                              <td>{{this.name_node}}</td>
                              <td >{{satoshi this.amount_coin}}</td>
                              <td>{{satoshi this.amount_payment}} {{this.method_payment}}</td>
                              <td>
                              	<a href="/qweqwe/admin/ico/matched/{{this._id}}">
                              		<span class="label label-success" onclick="return confirm('Matching ???');">Matching Order</span>
                              	</a>
                              	<a href="/qweqwe/admin/ico/cancel/{{this._id}}">
									<span class="label label-warning" onclick="return confirm('Cancel ???');">Cancel Order</span>
                              	</a>
                              </td>
                           </tr>
                           {{/each}} 
                        </tbody>
                     </table>

                     
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>