<div class="content">
   <div class="container-fluid">
     

      <div class="row">
         <div class="col-md-12">
            <div class="card" style="padding: 20px;">
               <h4 class="text-center">{{support.subject}}</h4>
               <div class="clearfix"></div>
               <ul class="chat" style="margin-top: 20px;">
               {{#each support.message}} 
                  {{#if_eq this.types '0'}} 
                  <li class="left clearfix">
                     <span class="chat-img pull-left">
                        <img width="60" src="/assets/img/240_F_78735333_o3qJe4bT5ciwldLIjVDulFKrDAV3jGYO.jpg" />
                     </span>
                      <div class="chat-body clearfix" style="width: 100%; float: left;">
                          <div class="">
                              <strong class="primary-font">{{ this.username}} </strong> 
                              <small class="pull-right text-muted  pull-right">
                                  <span class="glyphicon glyphicon-time pull-right"></span>{{prettifyDate this.date}}</small>
                          </div>
                          <p>
                              {{this.message}}
                          </p>
                      </div>
                  </li>
                  {{/if_eq}}  
                  {{#if_eq this.types '1'}} 
                  <li class="right clearfix">
                      <div class="chat-body clearfix" style="width: 100%; float: left;">
                          <div class="">
                              <small class=" text-muted"><span class="glyphicon glyphicon-time"></span>{{prettifyDate this.date}}</small>
                              <strong class="pull-right primary-font">{{ this.username}}</strong>
                          </div>
                          <p class="pull-right">
                              {{this.message}}
                          </p>
                      </div>
                      <span class="chat-img pull-right">
                      <img width="60" src="/assets/img/cbf0e4c230457ad352127c0d37e7d44f.png" />
                  </span>
                  </li>
                  {{/if_eq}} 
               {{/each}} 
              </ul>
              <div class="clearfix"></div>
              <div >
                  <form method="post" action="/qweqwe/admin/support/ticket/reply-support" id="frmReplySupport" autocomplete="off" novalidate="novalidate">
                     <input type="hidden" value="{{token}}" name="token">
                     <div class="form-group ">
                        <textarea class="form-control" style="height: 80px;" name="message" id="message" maxlength="2000" placeholder="Message"></textarea>
                     </div>
                     <div class="text-center">
                        <button type="submit" style="margin-top: 10px;width: 120px;" class="btn btn-success">Reply</button>
                     </div>
                  </form>
               </div>
               <div class="clearfix"></div>
            </div>
         </div>
      </div>
