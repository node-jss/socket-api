<div class="main">
   <div class="container">
      <div class="row row-content">
         <div class="col-md-6 col-md-push-3">
            <div class="col-md-12 text-center">
               <img class="site_logo" style="margin-top: 20px;" alt="Logo" width="300" style="" src="/img/logo.png" />
            </div>
            
            <div class="col-md-12 login-page-right" style="margin-top: 20px;">
               <img src="/img/loading.gif"/> 
               <div class="bg-while">
                  <div class="row frm-login-header">
                     <div class="pull-left">
                        <h2 class="title-login m-0">New Password</h2>
                     </div>
                    
                  </div>
                  <div class="row m-t-15">
                  <form id="frmForgot" name="frmForgot" autocomplete="off">
                     <div class="floating-box red m-b-10 error-box">Please enter the same new password</div>
                     <div class="form-group"> <input id="password" name="email" type="password" class="form-control autocomplete="off"" placeholder="Password"/> </div>
                     <div class="form-group"> <input id="cf_password" name="password" type="password"  class="form-control" autocomplete="off" placeholder="Confirm Password"/> </div>
                     <input  name="text" type="hidden" id="token"  value="{{token}}" class="form-control" autocomplete="off" placeholder="Confirm Password"/> 
                     <div id="recaptcha" class="m-b-15"></div>
                     <div class="form-group"> <button class="btn btn-danger p-0 m-0" type="submit"> SUBMIT </button> </div>
                  </form>
  
                  <div class="row frm-login-footer p-t-15"> <span class="pull-left"> <a class="fg-pword" href="/login_user">Already have account? Login</a> </span> </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>